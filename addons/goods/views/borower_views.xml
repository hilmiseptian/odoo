<odoo>
  <!-- Partner views -->
  <record id="view_goods_borower_list" model="ir.ui.view">
    <field name="name">goods.borower.list</field>
    <field name="model">goods.borower</field>
    <field name="arch" type="xml">
      <list string="Goods Borower">
        <field name="name" />
      </list>
    </field>
  </record>

  <record id="view_goods_borower_form" model="ir.ui.view">
    <field name="name">goods.borower.form</field>
    <field name="model">goods.borower</field>
    <field name="arch" type="xml">
      <form string="Goods Borower">
        <sheet>
          <group>
            <field name="name" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action must come BEFORE the menuitem -->
  <record id="action_goods_borower" model="ir.actions.act_window">
    <field name="name">Borowers</field>
    <field name="res_model">goods.borower</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menus -->
  <menuitem id="menu_goods_root" name="Goods" sequence="10" />

  <!-- <menuitem id="menu_goods_borower"
            name="Partners"
            parent="menu_library_root"
            action="action_goods_borower"/> -->
</odoo>