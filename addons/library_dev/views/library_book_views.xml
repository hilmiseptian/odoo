<odoo>
    <!-- Tree View -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Library Books">
                <field name="name"/>
                <field name="author"/>
                <field name="date_published"/>
                <field name="state"/>
                <field name="borrower_id"/>
                <field name="days_borrowed"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Library Book">
  <header>
    <button name="action_borrow" type="object" string="Borrow" class="btn-primary"
            invisible="state != 'available'"/>
    <button name="action_return" type="object" string="Return" class="btn-secondary"
            invisible="state != 'borrowed'"/>
    <field name="state" widget="statusbar" statusbar_visible="available,borrowed,lost"/>
</header>


                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="date_published"/>
                    </group>

                    <group>
                        <field name="borrower_id"/>
                        <field name="borrowed_date" readonly="1"/>
                        <field name="days_borrowed" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Search Books">
                <field name="name"/>
                <field name="author"/>
                <filter string="Available" name="available" domain="[('state','=','available')]"/>
                <filter string="Borrowed" name="borrowed" domain="[('state','=','borrowed')]"/>
                <filter string="Lost" name="lost" domain="[('state','=','lost')]"/>
            </search>
        </field>
    </record>

    <!-- Action & Menu -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_library_book"
              name="Books"
              parent="menu_library_root"
              action="action_library_book"/>
</odoo>
