<odoo>
    <!-- Partner views -->
    <record id="view_library_partner_list" model="ir.ui.view">
        <field name="name">library.partner.list</field>
        <field name="model">library.partner</field>
        <field name="arch" type="xml">
            <list string="Library Partners">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_library_partner_form" model="ir.ui.view">
        <field name="name">library.partner.form</field>
        <field name="model">library.partner</field>
        <field name="arch" type="xml">
            <form string="Library Partner">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action must come BEFORE the menuitem -->
    <record id="action_library_partner" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">library.partner</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_library_root" name="Library" sequence="10"/>

    <menuitem id="menu_library_partner"
              name="Partners"
              parent="menu_library_root"
              action="action_library_partner"/>
</odoo>
